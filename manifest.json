{
  "manifest_version": 3,
  "name": "Snippet Saver",
  "version": "1.0",
  "description": "Save, edit, and copy snippets of rich text.",
  "permissions": ["storage", "clipboardWrite", "clipboardRead"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.svg",
      "48": "icons/icon.svg",
      "128": "icons/icon.svg"
    }
  }
}